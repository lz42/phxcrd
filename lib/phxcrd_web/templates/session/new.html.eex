<h1><%= gettext "Login" %></h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [method: :post, as: :user], fn f -> %>
<div class="form-group">
    <%= text_input f, :username, placeholder: gettext "Username", autofocus: true, autocomplete: "username" %>
</div>

<div class="form-group">
    <%= password_input f, :password, placeholder: gettext "Password", autocomplete: "current-password" %>
</div>

<div class="form-group">
    <%= submit gettext "Submit" %>
</div>
<% end %>